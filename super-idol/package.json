{
  "name": "super-idol",
  "version": "1.0.0",
  "description": "速Per Idol 健康管理網站",
  "main": "index.js",
  "scripts": {
    "frontend": "npm --prefix frontend run dev",
    "backend": "python backend/run.py",
    "dev": "concurrently \"npm run backend\" \"npm run frontend\"",
    "install-all": "npm install && cd frontend && npm install",
    "build": "cd frontend && npm install && npm run build",
    "postbuild": "mkdir -p backend/static && cp -r frontend/dist/* backend/static/",
    "serve": "cd frontend && npm run serve",
    "lint": "cd frontend && npm run lint"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0" 
  }
} 